<p id="notice"><%= notice %></p>

<h1>Reservas</h1>

<table style ="width:100%;">
  <thead>
    <tr>
      <th>Coche</th>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservas.each do |reserva| %>
      <tr>
        <td><%= reserva.coche %></td>
        <td><%= reserva.nombre %></td>
        <td><%= link_to 'Show', reserva_path(reserva.id, :format => :pdf) %></td>
        <td><%= link_to 'Edit', edit_reserva_path(reserva) %></td>
        <td><%= link_to 'Destroy', reserva, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div style = "text-align:center;">
<%= link_to 'New Reserva', new_reserva_path %>
</div>
